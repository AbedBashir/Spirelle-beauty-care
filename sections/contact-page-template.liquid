<div class="yv-contact-detail-outer">
  <div class="container sm-container">
    <div class="yv-contact-form">
      <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-7">
          <div class="yv-get-in-touch">
            {%- if section.settings.form_heading != blank -%}
              <{{ section.settings.seo_heading }} class="yv-form-heading h3">{{ section.settings.form_heading }}</{{ section.settings.seo_heading }}>
            {%- endif -%}
            {%- form 'contact', id: 'ContactForm' -%}
  <div class="row">
    <div class="col-md-12 col-lg-12">
      <div class="form-group">
        <label for="ContactForm-username">{{ 'sections.contact.name' | t }}</label>
        <input type="text" class="form-control" id="ContactForm-username" name="contact[Name]" placeholder="{{ 'sections.contact.name' | t }}" required>
      </div>
    </div>

    <div class="col-md-12 col-lg-12">
      <div class="form-group">
        <label class="field__label" for="ContactForm-email">{{ 'templates.contact.form.email' | t }} <span aria-hidden="true">*</span></label>
        <input
          autocomplete="email"
          type="email"
          id="ContactForm-email"
          class="form-control"
          name="contact[email]"
          spellcheck="false"
          autocapitalize="off"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          aria-required="true"
          {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="ContactForm-email-error"
          {% endif %}
          placeholder="{{ 'sections.contact.email' | t }}"
          required
        >
        {% if form.errors contains 'email' %}
          <span class="error-text">
            {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
          </span>
        {%- endif -%}
      </div>
    </div>

    <!-- âœ… New Phone Field -->
    <div class="col-md-12 col-lg-12">
      <div class="form-group">
        <label for="ContactForm-phone">{{ 'sections.contact.phone' | default: 'Phone Number' }}</label>
        <input
          type="tel"
          id="ContactForm-phone"
          class="form-control"
          name="contact[Phone]"
          placeholder="{{ 'sections.contact.phone' | default: 'Your phone number' }}"
          pattern="[0-9+\-\s()]{5,}"
        >
      </div>
    </div>
    <!-- End Phone Field -->

    <div class="col-md-12 col-lg-12">
      <div class="form-group">
        <label for="ContactForm-body">{{ 'sections.contact.message' | t }}</label>
        <textarea id="ContactForm-body" class="form-control" name="contact[Message]" placeholder="{{ 'sections.contact.message' | t }}" rows="3" required>{{ form.body }}</textarea>
      </div>
    </div>

    <div class="col-md-12 col-lg-12 form-group">
      <button type="submit" class="button btn-block">
        {% if settings.buttonAnimation == 'animated-arrow'%}
          <span class="btn-animated-arrow">
            <svg fill="none" viewBox="0 0 8 8">
              <path fill="currentColor" fill-rule="evenodd" d="M0 0h8v8H7V1.707L1.354 7.354 1 7.707.293 7l.353-.354L6.293 1H0V0Z" clip-rule="evenodd"></path>
            </svg>
          </span>
        {% endif %}
        <span class="btn-txt">{{ section.settings.form_button }}</span>
      </button>
    </div>
  </div>

  {%- if form.posted_successfully? -%}
    <span class="form-status form-status-list form__message success-text" tabindex="-1">
      {{ 'templates.contact.form.post_success' | t }}
    </span>
  {%- endif -%}
{%- endform -%}

